<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/fondo_imagenes"
    tools:context=".MainActivity">


   <androidx.cardview.widget.CardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:padding="@dimen/_20sdp"
      app:cardBackgroundColor="#D5F3F0"
       app:cardCornerRadius="@dimen/_5sdp"
       app:cardElevation="@dimen/_12sdp"

   >


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:layout_gravity="center"
          android:orientation="vertical"
        android:padding="20sp"
          android:background="@drawable/border_main"
       >

         <TextView
             android:id="@+id/no_time_limit"
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:background="#009688"
             android:gravity="center"
             android:text="NO TIME LIMIT"
             android:textColor="@color/white" />

         <TextView
             android:id="@+id/NORMAL"
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:layout_marginTop="15dp"
             android:background="#009688"
             android:gravity="center"
             android:text="NORMAL"
             android:textColor="@color/white"

             />

         <TextView
             android:id="@+id/HARD"
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:layout_marginTop="15dp"
             android:background="@color/teal_700"
             android:gravity="center"
             android:text="HARD"
             android:textColor="@color/white"


             />
      </LinearLayout>


   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/_30sdp"
       app:cardBackgroundColor="#D5F3F0"
       app:cardCornerRadius="@dimen/_5sdp"
       app:cardElevation="@dimen/_12sdp"
     android:layout_centerHorizontal="true"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:background="@drawable/border_main"
         android:padding="@dimen/_10sdp"

          >

         <TextView
             android:id="@+id/MORE_GAMES"
             android:layout_width="@dimen/_70sdp"
             android:layout_height="@dimen/_10sdp"
             android:background="#D5F3F0"

             android:text="MORE_GAMES"
             android:textSize="@dimen/_10sdp"
             android:textColor="@color/teal_700"
             />

         <TextView
             android:id="@+id/privacy_policy"
             android:layout_width="@dimen/_80sdp"
             android:layout_height="@dimen/_10sdp"
             android:background="#D5F3F0"
             android:gravity="center"
             android:text="PRIVACY POLICY"
             android:textSize="@dimen/_10sdp"
             android:textColor="@color/teal_700" />
         <TextView
             android:id="@+id/share"
             android:layout_width="@dimen/_40sdp"
             android:layout_height="@dimen/_10sdp"
             android:background="#D5F3F0"
             android:gravity="center"
             android:text="SHARE"
             android:textSize="@dimen/_10sdp"
             android:textColor="@color/teal_700"/>
      </LinearLayout>

   </androidx.cardview.widget.CardView>

</RelativeLayout>